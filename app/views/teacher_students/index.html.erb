<br>
<%= render "layouts/navbar" %>
<br>
<br>
<br>
<%= @teacher.name %> students<br>
<br>
<br>
<%= form_with url: "/teachers/#{@teacher.id}/students?search=otg", method: :get, local: :true do |form| %>
  <%= form.label :search, "Search for Students classes:" %>
  <%= form.text_field :search %>
  <%= form.submit "Search" %>
<% end %>
<br>
<br>
<%= link_to "Off Track to Graduate", "/teachers/#{@teacher.id}/students?sort=otg" %><br>
<%= link_to "Sort Alphabetically", "/teachers/#{@teacher.id}/students?sort=alpha" %>
<br>
<br>
<div class="students">
  <% @students.each do |student| %>
    <div id="student-<%=student.id%>">
      Student Name: <%=link_to "#{student.name}", "/students/#{student.id}" %> <br>
      Off Track to Graduate: <% if student.otg == false %>
                                <%= "No" %> <br>
                             <% else %>
                                <%= "Yes" %> <br>
                             <% end %>
      Max Classes: <%= student.max_classes %> <br>
      <br>
    </div>
  <% end %>
</div>
<br>
<br>
<br>
<%=link_to "Create Student", "/teachers/#{@teacher.id}/students/new"%>