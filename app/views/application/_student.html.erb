<%= form_with url: path, method: method, local: true do |f| %>

  <%= f.label :name, "Name" %><br>
  <%= f.text_field :name %>
<br>
<br>
  <%= f.label :otg, "Is student Off Track to Graduate?" %><br>
  <%= f.select :otg, options_for_select([true, false]), class: 'form-control' %>
<br>
<br>
  <%= f.label :max_classes, "Max classes:" %><br>
  <%= f.select :max_classes, options_for_select(1..9, prompt: 'Select One')  %>
<br>
<br>
  <%= f.submit button_text %>
<br>
<br>
<% end %>